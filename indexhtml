<body>
  <!-- Start Screen -->
  <div id="start" class="screen active">
    <h1>♟️ Chess Arena Pi</h1>
    <button onclick="goTo('menu')">Start</button>
  </div>

  <!-- Menu -->
  <div id="menu" class="screen">
    <h2>Main Menu</h2>
    <button onclick="goTo('quick')">Quick Game</button>
    <button onclick="goTo('classic')">Classic</button>
  </div>

  <!-- Quick Game Screen -->
  <div id="quick" class="screen">
    <h2>Quick Game</h2>
    <div id="board"></div>
    <button onclick="goTo('menu')">Back</button>
  </div>

  <!-- Classic Screen (placeholder for now) -->
  <div id="classic" class="screen">
    <h2>Classic Mode (Coming Soon)</h2>
    <button onclick="goTo('menu')">Back</button>
  </div>

  <script>
    // Screen navigation
    function goTo(id) {
      document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
      document.getElementById(id).classList.add('active');

      if (id === 'quick') initBoard();
    }

    // Chess setup
    let board, game;

    function initBoard() {
      game = new Chess();
      board = Chessboard('board', {
        draggable: true,
        position: 'start',
        onDrop: (source, target) => {
          let move = game.move({ from: source, to: target, promotion: 'q' });
          if (move === null) return 'snapback';
        }
      });
    }
  </script>
